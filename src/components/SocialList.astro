---
import { Icon } from "astro-icon/components";

const socialLinks: {
	friendlyName: string;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "GitHub",
		link: "https://github.com/kesku",
		name: "mdi:github",
	},
	{
		friendlyName: "Twitter / X",
		link: "https://x.com/yoimnotkesku",
		name: "mdi:twitter",
	},
	{
		friendlyName: "Discord",
		link: "https://discord.gg/perplexity-ai",
		name: "mdi:discord",
	},
];
---

<ul class="flex items-center gap-4">
	{
		socialLinks.map(({ friendlyName, link, name }) => (
			<li>
				<a
					class="group flex items-center gap-2 rounded-lg border border-accent/30 bg-accent/5 px-4 py-2 transition-all duration-300 hover:border-accent hover:bg-accent/15"
					href={link}
					rel="noopener noreferrer"
					target="_blank"
				>
					<Icon aria-hidden="true" class="h-5 w-5 text-accent transition-transform group-hover:scale-110" focusable="false" name={name} />
					<span class="text-sm font-medium">{friendlyName}</span>
				</a>
			</li>
		))
	}
</ul>
